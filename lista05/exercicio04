const valorR = 10000;

let euro = "Euro";
let libraEsterlina = "Libra Esterlina";
let dolar = "Dolar";

let decisao = euro;

const valorEuro = 5.418;
const valorLibraEsterlina = 6.336;
const valorDolar = 5.189;

if(decisao == euro){

    let calculoEuro = (valorR / valorEuro).toFixed(2);
    console.log("Conversão de Reais = R$",valorR,"Para Euro = €",calculoEuro);

} else if(decisao == libraEsterlina){

    let calculoLibra = (valorR / valorLibraEsterlina).toFixed(2);
    console.log("Conversão de Reais = R$",valorR,"Para Libra = £",calculoLibra);

} else if(decisao == dolar){
    
     let calculoDolar = (valorR / valorDolar).toFixed(2);
     console.log("Conversão de Reais = R$",valorR,"Para Dolar = $",calculoDolar);
}